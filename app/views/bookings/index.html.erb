<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
    <h3>Your bookings</h3>
      <% @bookings.each do |booking| %>
        <div class="booking">
        <h5 class="booking-title" >Booking: <%= booking.car.brand %> <%= booking.car.model %></h5>
        <div >
          <h5><strong> Initial: <%= booking.initial %></strong></h5>
          <h5><strong> Final: <%= booking.final %></strong></h5>
          <br>
          <p>All the information</p>
          <ul>
            <li><%= booking.car.brand %></li>
            <li><%= booking.car.model %></li>
            <li><%= booking.car.color %></li>
            <li><%= booking.car.year %></li>
            <li class="info-booking-card"><%= booking.car.plate %></li>
          </ul>
        </div>
      <% end %>
    </div>
  </div>
</div>
