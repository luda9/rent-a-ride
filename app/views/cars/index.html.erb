
<div class="cars-header-index">
  <h2>Cars available for rent</h2>
</div>
  <div class="cars-list">
    <% @cars.each do |car| %>
      <div class="card m-2" style="width: 18rem;">
        <%= cl_image_tag car.photos.first.key %>
        <div class="card-body">
          <h5 class="card-title"><%= car.brand%> <%= car.model %></h5>
          <p class="card-text"><%= car.year%></p>
          <p class="card-text">$<%= car.price %> p/d</p>
          <%= link_to "View more", car, class: "btn brand-color" %>
          <% if policy(car).edit? %>
            <%= link_to "Edit", edit_car_path(car), class: "btn btn-secondary" %>
          <% end %>
          <% if policy(car).destroy? %>
            <%= link_to "Remove", car_path(car), class:"text-danger", data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
