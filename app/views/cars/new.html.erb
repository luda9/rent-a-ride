<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
    <h3>Post your car for rent</h3>
      <%= simple_form_for @car do |f| %>
        <%= f.input :brand, placeholder: 'Audi' %>
        <%= f.input :year, placeholder: '2019' %>
        <%= f.input :color, placeholder: 'White' %>
        <%= f.input :model, placeholder: 'A3' %>
        <%= f.input :plate, placeholder: 'R3NT4R1DE' %>
        <%= f.input :price, placeholder: 'Price per day' %>
        <%= f.input :photo, as: :file %>

        <%= f.submit class: 'btn btn-flat' %>
      <% end %>
    </div>
  </div>
</div>
